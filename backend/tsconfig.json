{
  "compilerOptions": {
    "target": "ES2022", // Target modern Node.js versions supporting ES Modules
    "module": "NodeNext", // Use modern ES Modules for Node.js
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "resolveJsonModule": true, // Allow importing JSON files
    "moduleResolution": "NodeNext" // Use modern Node.js module resolution
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules"] // Exclude the node_modules directory
}